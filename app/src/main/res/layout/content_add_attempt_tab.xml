<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".location.info.LocationInfoActivity">

    <TextView
        android:id="@+id/noAttemptsMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/thick_padding"
        android:text="@string/msg_no_attempts"
        android:textSize="@dimen/text_size_medium" />

    <Button
        android:id="@+id/recordAttempt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/thick_padding"
        android:layout_marginRight="@dimen/thick_padding"
        android:text="@string/label_record_attempt" />

</LinearLayout>