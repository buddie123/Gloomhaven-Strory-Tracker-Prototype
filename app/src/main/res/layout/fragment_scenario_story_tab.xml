<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lastScenarioScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".location.info.LocationInfoActivity"
    tools:showIn="@layout/activity_location_info">

    <TableLayout
        android:id="@+id/locTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/locTeaserLabelTableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/locTeaserLabelTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/label_teaser"
                android:textSize="@dimen/text_size_small" />
        </TableRow>

        <TableRow
            android:id="@+id/locTeaserTableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/locTeaserTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/thin_padding"
                android:paddingEnd="@dimen/thin_padding"
                android:paddingLeft="@dimen/thick_padding"
                android:paddingRight="@dimen/thin_padding"
                android:paddingStart="@dimen/thick_padding"
                android:paddingTop="@dimen/thin_padding"
                android:text="@string/sample_scenario_teaser" />
        </TableRow>

        <TableRow
            android:id="@+id/locSummaryLabelTableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/locSummaryLabelTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/thin_padding"
                android:text="@string/label_summary"
                android:textSize="@dimen/text_size_small" />
        </TableRow>

        <TableRow
            android:id="@+id/locSummaryTableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/lastScenarioSummaryTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/thin_padding"
                android:paddingEnd="@dimen/thin_padding"
                android:paddingLeft="@dimen/thick_padding"
                android:paddingRight="@dimen/thin_padding"
                android:paddingStart="@dimen/thick_padding"
                android:paddingTop="@dimen/thin_padding"
                android:text="@string/sample_scenario_summary"
                android:textSize="@dimen/text_size_small" />
        </TableRow>

        <TableRow
            android:id="@+id/locConclusionLabelTableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/locConclusionLabelTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/thin_padding"
                android:text="@string/label_conclusion"
                android:textSize="@dimen/text_size_small" />
        </TableRow>

        <TableRow
            android:id="@+id/locConclusionTableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/locConclusionTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="@dimen/thin_padding"
                android:paddingEnd="@dimen/thin_padding"
                android:paddingLeft="@dimen/thick_padding"
                android:paddingRight="@dimen/thin_padding"
                android:paddingStart="@dimen/thick_padding"
                android:paddingTop="@dimen/thin_padding"
                android:text="@string/sample_scenario_summary"
                android:textSize="@dimen/text_size_small" />

        </TableRow>

    </TableLayout>

</ScrollView>