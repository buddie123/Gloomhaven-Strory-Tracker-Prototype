<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".LocationInfoActivity"
    tools:showIn="@layout/activity_location_info">

    <TableRow
        android:id="@+id/scenariosUnlockedTableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/scenariosUnlockedSpinnerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/spinner_unlocked_scenarios_collapsed"
            android:padding="11dp"
            android:src="@drawable/ic_chevron_right__24dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical">

            <Button
                android:id="@+id/scenariosUnlockedLabelButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="start|center_vertical"
                android:padding="8dp"
                android:text="@string/label_unlocked_scenarios"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/scenariosUnlockedRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"
                tools:listitem="@layout/content_reward_detail">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/scenariosBlockedTableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/scenariosBlockedSpinnerButton"
