                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"
                tools:listitem="@layout/content_reward_detail">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </TableRow>

    <TableRow
